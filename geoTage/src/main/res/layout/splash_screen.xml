<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical" >

    <LinearLayout android:id="@+id/splash_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" >

        <TextView
            style="@style/text.xlarge.bold"
            android:text="Geo"
            android:textColor="@color/clouds" />

        <TextView
            style="@style/text.xlarge.bold"
            android:text="Tage"
            android:textColor="@color/clouds" />
    </LinearLayout>

    <TextView
        android:layout_below="@id/splash_screen_title"
        android:id="@+id/textView1" android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" android:textColor="@color/clouds"
        android:layout_height="wrap_content"
        android:text="Please wait ..." />

    <ImageView
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:visibility="gone" />

</RelativeLayout>