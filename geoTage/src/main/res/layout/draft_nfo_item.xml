<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_item_view"
    style="@style/screen.with_padding"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/info_item_avatar"
        android:layout_width="@dimen/avatar_thumbnail"
        android:layout_height="@dimen/avatar_thumbnail"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/no_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_normal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_item_tvName"
            style="@style/text.medium"
            android:text="User name"
            android:textColor="@color/midnight_blue" />

        <TextView
            android:id="@+id/info_item_tvRocks"
            style="@style/text.normal"
            android:text="Rock category"
            android:textColor="@color/pomegranate" />

        <TextView
            android:id="@+id/info_item_tvAddress"
            style="@style/text.small"
            android:text="User address"
            android:textColor="@color/asbestos" />

        <TextView
            android:id="@+id/info_item_tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

        <TextView
            android:id="@+id/info_item_tvDate"
            style="@style/text.small" />

        <LinearLayout
            android:id="@+id/info_item_panelAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <Button
                android:id="@+id/info_item_btnDelete"
                style="@style/list_action_btn"
                android:background="@drawable/red_round_selector_small"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Delete"
                android:textColor="@color/clouds" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>