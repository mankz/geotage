<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/distance_very_long" >

    <TextView
        android:id="@+id/textView1"
        style="@style/text.medium"
        android:layout_marginBottom="@dimen/distance_normal"
        android:gravity="center"
        android:text="Input your email here, we will send new password to your email" />

    <EditText
        android:id="@+id/forgot_password_etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_normal"
        android:ems="10"
        android:gravity="center"
        android:hint="your email"
        android:inputType="textEmailAddress" >
    </EditText>

    <Button
        android:id="@+id/forgot_password_btnReset"
        style="@style/colored_button.blue"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/distance_normal"
 
        android:text="Reset Password" />

