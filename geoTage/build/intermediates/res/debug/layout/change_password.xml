<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/screen.with_padding"
    android:orientation="vertical" >

    <TextView
        style="@style/text.label.center"
        android:text="Change Password" />

    <LinearLayout style="@style/panel_form" >

        <EditText
            android:id="@+id/change_password_etCurrPassword"
            style="@style/text.field"
            android:hint="Current password"
            android:inputType="textPassword" >
        </EditText>

        <EditText
            android:id="@+id/change_password_etNewPassword"
            style="@style/text.field"
            android:hint="New password"
            android:inputType="textPassword" >
        </EditText>

        <EditText
            android:id="@+id/change_password_etConfirmPassword"
            style="@style/text.field"
            android:hint="Re-type new password"
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <LinearLayout style="@style/panel_button" >

        <Button
            android:id="@+id/change_password_btnCancel"
            style="@style/colored_button.red"
            android:text="Cancel" />

        <Button
            android:id="@+id/change_password_btnSave"
            style="@style/colored_button.blue"
            android:layout_marginLeft="@dimen/distance_normal"
            android:text="Save" />
    </LinearLayout>

